{% extends "layout.html.twig" %}

{% block title %}
    GAMEBAR
{% endblock %}

{% block content %}

    <!-- Début 1ère Section -->
    <section class="row p-0 indexhautpage">


        <!-- Div notreFonctionnement -->
        <div class="col-md-4 mt-6 notreFonctionnement">
            <div class="titleFonctionnement text-center">
                <img id="gamebar-name" src="{{ asset('assets/img/logo/text-logo.png') }}"
                     alt="GameBar-name">
            </div>
            <div class="row accueil-slogan">
                <div class="col-12 col-md-2 logo-accueil">
                    <img src="{{ asset('assets/img/logo/GAMEBAR_Logo_1080_GAMEBAR_-_logo_-_simple_choppe_des_noir.png') }}"
                         alt="GameBar-logo">
                </div>
                <div class="col-12 col-md-6 text-center texte">
                    <div>
                        <div class="span-jeu">1 jeu,</div>
                        <div class="span-bar">1 bar,</div>
                        <em>des joueurs !</em>
                    </div>
                </div>
            </div>
        </div>
        <!-- Fin Div notreFonctionnement -->

        <!-- Div notreAccroche -->
        <div class="col-md-8 mt-8 notreAccroche">
            <div>
                <img alt="photo accroche" src="{{ asset('assets/img/index8.jpg') }}"/>
            </div>
        </div>
        <!-- Fin Div notreAccroche -->

    </section>
    <!-- Fin 1ère Section -->

    </div>

    <!-- Div TrouveTaTable -->
    <div class="row navbar navbar-light bg-light trouveTaTable">
        <div class="col-12 col-md-10 text-center textTrouveTaTable">
            <div class="text-center petittitre">Trouve ta table</div>
            <form class="form-inline text-center">
                <input class="form-control mx-sm-5 mx-1" type="search"
                       placeholder="Recherchez un bar, un jeu..."
                       aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0 mr-sm-2 mx-sm-5 mx-1" type="submit">Rechercher
                </button>
            </form>
        </div>
    </div>
    <!-- Fin Div TrouveTaTable -->

    <!-- Div Gmap -->
    <div class="row googlemap">
        <div class="mx-auto col-sm-11 " id="gmap">
            <iframe src="https://www.google.com/maps/d/embed?mid=1q2yy84l8WZNpV5TttqHjgv9nznYpisHc" width="100%"
                    height="480"></iframe>
        </div>
    </div>
    <!-- Fin Div Gmap -->

    <div class="jeu mb-5">
        <a href="{{ path('default_bar') }}"><h3 class="text-center petittitre2">Voir tous les bars</h3></a>
    </div>

    <div class="container-fluid">
        <!-- Début 2ème Section -->
        <section class="row justify-content-center deuxieme-section">

            <div class="col-md-4 mars">
                <img class="img-fluid" src="{{ asset ('assets/img/terra.png') }}">
            </div>


            <div class="col-md-4 carousel-div">
                <!-- Carousel -->
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="{{ asset('assets/img/board-game-businessman-challenge-1040157.png') }}"
                                 class="d-block h-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="{{ asset('assets/img/close-up-cubes-dice-707837.png') }}" class="d-block h-100"
                                 alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="{{ asset('assets/img/blur-board-game-cards-776654.png') }}"
                                 class="d-block h-100" alt="...">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <!-- Fin du Carousel -->


            </div>
            <div class="donjon col-md-4">
                <img class="img-fluid" src="{{ asset ('assets/img/Le-Donjon-de-Naheulbeuk.jpg') }}">
            </div>

            <!-- Fin 2ème Section -->
        </section>

        <div class="jeu mb-5">
            <a href="{{ path('default_jeu') }}"><h3 class="text-center petittitre2">Voir tous les jeux</h3></a>
        </div>


        <!-- 3ème Section -->
        <section class="row troisieme-section" id="newsletter">

            <div class="col-md-7 colNews">
                <img class="imgNewsletter" src="{{ asset('assets/img/BoardGame1.jpg' ) }}" alt="">
            </div>
            <div class="col-md-5">
                <div class="formNewsletter shadow-lg">
                    <h2>Tenez-vous au jus !</h2>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Nom">
                        <input type="email" class="form-control" placeholder="Email">
                    </div>
                    <span class="input-group-btn"><button class="btn btn-theme boutonNewsletter" type="submit">S'ABONNER A LA NEWSLETTER</button></span>
                </div>
            </div>

        </section>
        <!-- Fin 3ème Section -->

    </div> {# /container-fluid #}
{% endblock %}
